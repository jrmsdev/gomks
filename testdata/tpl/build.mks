#!/usr/bin/env mks

// tpl test build script

src = "testdata/tpl"
site = "testdata/_tmp/tpl/out"

log("Build tpl testing site %q -> %q", src, site)

params = params_new()

rmtree(site)
page_tpl = tpl_parse(src+"/template/page.html")

tpl_render(src+"/content/_index.html", site+"/index.html", page_tpl, params)
